# Configuración de la aplicación
APP_NAME="Publicity Visual"
APP_ENV=development
DEBUG=True
SECRET_KEY=clave_secreta_muy_larga_y_segura_aqui

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Base de datos (SQLite por defecto)
DATABASE_URL=sqlite:///./publicity.db

# Claves API para servicios externos
NEWSAPI_KEY=tu_api_key_de_newsapi_aqui

# Configuración de CORS
ALLOWED_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# Configuración de caché
CACHE_TTL=3600  # en segundos (1 hora)

# Configuración de marcas de agua
WATERMARK_OPACITY=0.8
WATERMARK_TEXT="© Publicity Visual - Noticias Reales"

# Configuración de límites
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100

# Configuración de logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
